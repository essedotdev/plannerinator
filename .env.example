# Local Development Environment Variables
# Copy this file to .env.local and fill in your values

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# Better Auth Secret (REQUIRED)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-here-generate-with-openssl"

# Local Development URLs
BETTER_AUTH_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email System (mock mode for development)
EMAIL_PROVIDER="mock"
EMAIL_FROM="noreply@localhost.dev"
EMAIL_REPLY_TO="support@localhost.dev"
ADMIN_EMAIL="admin@localhost.dev"

# Cloudflare R2 Storage (for attachments)
# See docs/R2_SETUP.md for complete setup guide
#
# How to get these values:
# 1. Go to Cloudflare Dashboard â†’ R2
# 2. Create bucket: "plannerinator-attachments"
# 3. Create API token with Object Read & Write permissions
# 4. Copy the credentials shown (only shown once!)
# 5. Account ID is in the R2 endpoint URL: https://<account-id>.r2.cloudflarestorage.com
R2_ACCOUNT_ID="your-account-id-from-cloudflare"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="plannerinator-attachments"

# Attachment Settings
MAX_FILE_SIZE_MB="10"           # Maximum file size per upload (in MB)
DEFAULT_STORAGE_QUOTA_GB="1"    # Default storage quota per user (in GB)

# AI Assistant (OpenRouter)
# See docs/AI_SETUP.md for setup guide
OPENROUTER_API_KEY="your-openrouter-api-key"
OPENROUTER_MODEL="anthropic/claude-haiku-4.5"

# AI Logging Configuration
AI_LOGGING_ENABLED="true"          # Enable/disable basic AI logging (default: true)
AI_DB_LOGGING_ENABLED="false"      # Enable/disable database logging (default: false)
AI_VERBOSE_LOGGING="false"         # Enable/disable verbose debug logs (default: false)
                                   # Verbose logs include: full messages sent to AI, tool calls,
                                   # tool results, and complete AI responses

# Note: Production config is in wrangler.jsonc
# Secrets for production are configured via: wrangler secret put SECRET_NAME
